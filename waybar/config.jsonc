  // },
   "battery": {
    "states": {
      "warning": 20,
      "critical": 15
    },
    "format": "BAT: [ {icon} ] <span>{capacity}%</span>",
    "interval": 5,
    "format-charging": "BAT: [ {icon} ] <span>CHRG</span>",
    "format-plugged": "BAT: [ {icon} ] <span>PLUG</span>",
    "tooltip-format": "CAPACITY: {capacity}%\nBATTERY: {power}W\nSTATUS: {timeTo}\nCYCLES: {cycles}\nHEALTH: {health}",
    "format-icons": [
      "█░░░░░░░",  // 0–10%   
      "██░░░░░░",  // 11–20% 
      "███░░░░░",  // 21–30%
      "████░░░░",  // 31–40%
      "█████░░░",  // 41–50%
      "██████░░",  // 51–60%
      "███████░",  // 61–70%
      "████████",  // 71–80%
      "████████",  // 81–90%
      "████████"   // 91–100%
    ]
    },

  "clock": {
   "format": "<span color='#689d6a'>  </span> {:%a %d %b %H:%M:%S}",
   "format-alt": "<span color='#689d6a'>  </span> {:%Y-%m-%d}",
   "tooltip": true,
   "tooltip-format": "<tt><small>{calendar}</small></tt>",
    // "on-click": "gsimplecal",
   "on-click-right": "gsimplecal",
   "interval": 1
  },

  // Custom Power Button module
  "custom/power-button": {
    "format": "  ",
    "on-click": "$HOME/.config/rofi/powermenu/type-3/powermenu.sh",
    "tooltip": false
  },

  "custom/ScrollMPRIS": {
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/ScrollMPRIS -s 50 -b firefox,vlc,mpv --scroll wrapping -w 50",
    "escape": true,
    "on-click": "playerctl --player=spotify play-pause",
    "on-click-right": "playerctl --player=spotify next",  
    "on-click-middle": "playerctl --player=spotify previous", 
    "tooltip": true,
  }

