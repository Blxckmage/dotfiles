{
  // General Waybar configuration
  "layer": "top",
  "height": 30,
  "spacing": 1,
  "margin-top": 0,
  "margin-right": 0,
  "margin-left": 0,

  // Module placement
  "modules-left": [
    "hyprland/workspaces",
    // "custom/web-links",
    "custom/ScrollMPRIS"
    // "custom/playerctl"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "memory",
    // "cpu",
    "temperature",
    // "disk",
    "pulseaudio",
    // "backlight",
    "battery",
    "tray",
    "custom/power-button"
  ],

  // -------------------------------------------------------------------------
  // Modules configuration
  // -------------------------------------------------------------------------

  // Hyprland Workspaces module
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
  },

  // System Tray module
  "tray": {
    "icon-size": 12,
    "spacing": 8
  },

  // Disk module (commented out in modules-right)
  "disk": {
    "format": " 󰣆  {free}",
    "interval": 20
  },

  // CPU module
  // "cpu": {
  //   "format": "   {usage}%",
  //   "tooltip": true,
  //   "tooltip-format": "CPU Usage: {usage}%",
  //   "interval": 2
  // },
  "cpu": {
    "interval": 1,
    "format": "CPU: [ {icon} ] <span>{usage}%</span>",
    "tooltip": true,
    "tooltip-format": "CPU Usage: {usage}%",
    "format-icons": ["░░░░░░░░", "█░░░░░░░", "██░░░░░░", "███░░░░░", "████░░░░", "█████░░░", "██████░░", "███████░", "████████"]
  },

  // Memory module
  // "memory": {
  //   "format": "   {used} GiB ({percentage}%)",
  //   "tooltip": false,
  //   "interval": 10,
  //   "on-click-right": "kitty -e btop"
  // },

  "memory": {
    "interval": 10,
    "format": "MEM: [ {icon} ] <span>{percentage}%</span>",
    "tooltip-format": "MEMORY_TOTAL: {total}GiB\nSWAP_TOTAL: {swapTotal}GiB\n\nMEMORY_USED: {used:0.1f}GiB\nSWAP_USED: {swapUsed:0.1f}GiB",
    "format-icons": ["░░░░░░░░", "█░░░░░░░", "██░░░░░░", "███░░░░░", "████░░░░", "█████░░░", "██████░░", "███████░", "████████"]
  },

  // Temperature module
  "temperature": {
    "tooltip": true,
    "thermal-zone": 6,
    "critical-threshold": 100,
    "interval": 2,
    "format": "TEMP: [ {icon} ] <span>{temperatureC}°C</span>",
    "format-critical": "<span color='#B7416E'>TEMP: [ {icon} ] {temperatureC}°C</span>",
    "format-icons": ["░░░░░░░░", "█░░░░░░░", "██░░░░░░", "███░░░░░", "████░░░░", "█████░░░", "██████░░", "███████░", "████████"]
  },
  // "temperature": {
  //   "tooltip": false,
  //   "thermal-zone": 6,
  //   "critical-threshold": 70,
  //   "interval": 2,
  //   "format": "   {temperatureC}°C",
  //   "format-critical": "   {temperatureC}°C"
  // },

  // Backlight module
  "backlight": {
    // "device": "acpi_video1",
    "format": " {icon}  {percent}%",
    "format-icons": [
      "󰃚", // 0-14%
      "󰃛", // 15-29%
      "󰃜", // 30-44%
      "󰃝", // 45-59%
      "󰃞", // 60-74%
      "󰃟", // 75-89%
      "󰃠" // 90-100%
    ],
    "on-scroll-up": "brightnessctl set +1%",
    "on-scroll-down": "brightnessctl set 1%-",
    "smooth-scrolling-threshold": 1,
    "tooltip": false,
    "tooltip-format": "Brightness: {percent}%"
  },

  // PulseAudio module
    "pulseaudio": {
      "format": "VOL: [ {icon} ] <span>{volume}%</span>",
      "tooltip": true,
      "tooltip-format": "DEVICE: {desc}",
      "format-muted": "VOL: <span color='#B7416E'>[ MUTED ] <span>{volume}%</span></span>",
      "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
      "on-click-right": "pavucontrol",
      "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
      "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
      "scroll-step": 2,
      "reverse-scrolling": true,
      "format-icons": ["░░░░░░░░", "█░░░░░░░", "██░░░░░░", "███░░░░░", "████░░░░", "█████░░░", "██████░░", "███████░", "████████"]
  },
